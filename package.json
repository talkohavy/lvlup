{
  "name": "lvlup",
  "version": "0.0.15",
  "description": "A simple version manager solution for packages",
  "private": "true",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lvlup": "./index.js"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint -c ./.eslintrc.json \"./src/**/*.ts\"",
    "format-check": "prettier . --check",
    "format-fix": "prettier . --write",
    "test": "node --test",
    "typecheck": "tsc -p tsconfig.json",
    "build": "node ./build.config.js",
    "dev": "npm run build && node dist/index.js",
    "dev-init": "npm run build && node dist/index.js init",
    "dev-add": "npm run build && node dist/index.js add",
    "dev-bump": "npm run build && node dist/index.js bump",
    "dev-pub": "npm run build && cd dist && npm publish"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "restricted"
  },
  "author": "Tal Kohavy <talkohavy@gmail.com> (https://github.com/talkohavy)",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^5.3.8",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "human-id": "^4.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.3.0",
    "@types/yargs": "^17.0.33",
    "eslint": "^8.57.0",
    "eslint-plugin-ezlint": "^1.2.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
