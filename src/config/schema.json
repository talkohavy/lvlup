{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "commit": {
      "anyOf": [
        {
          "type": "array",
          "items": [
            {
              "type": "string",
              "title": "Commit Generator Path"
            },
            { "title": "Commit Generator Options" }
          ],
          "minItems": 1,
          "maxItems": 2
        },
        {
          "type": "boolean"
        },
        {
          "type": "string",
          "title": "Commit Generator Path"
        }
      ],
      "description": "Determines whether Changesets should commit the results of the add and version command.",
      "default": false
    },
    "access": {
      "enum": ["restricted", "public"],
      "type": "string",
      "description": "Determines whether lvlup should publish packages to the registry publicly or to a restricted scope.",
      "default": "restricted"
    }
  }
}
